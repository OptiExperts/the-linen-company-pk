<div class="container">
  <div class="ao_custom_category_wrapper">
    <h3 style="text-align:left; padding:0px 5px; font-size: 23px;
                margin-top: 30px;
                font-weight: 600;">SHOP BY CATEGORY</h3>

    <div class="ao_custom_category_container">
      {% for block in section.blocks %}
        <div class="ao_custom_category_item">
          <a style="text-decoration:none" href="{{ block.settings.link }}">
            <div class="ao_custom_category_item_image" style="background-image:url({{ block.settings.logo | img_url: '1000x' }})"></div>
            <h2 class="cat-font">{{ block.settings.text }}</h2>
          </a>
        </div>
      {% endfor %}
    </div>

  </div>
</div>
<style>
  h2.cat-font {
    letter-spacing: 3px;
  }
  @media(min-width: 200px) and (max-width: 550px) {
    .cat-font {
      font-size: 13px !important;
    }
    .ao_custom_category_wrapper {
      padding: 0 10px !important;
    }
  }
  .cat-font {
    font-size: 26px;
    text-align: -webkit-center;
  }
  .ao_custom_category_wrapper {
    padding: 0 200px;
  }
  .ao_custom_category_container {
    display: flex;
    flex-wrap: wrap;
  }
  .ao_custom_category_item {
    padding: 8px;
    width: 25%;
  }
  .ao_custom_category_item_image {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    padding-top: 150%;
  }
  .ao_custom_category_item h6 {
    font-size: 14px;
  }
  .ao_custom_category_item a {
    text-decoration: none;
  }

  @media only screen and (max-width: 920px) {
    .ao_custom_category_item {
      width: 50%;
    }
  }
</style>
{% schema %}
  {
    "name": "CategorySelection",
    "max_blocks": 4,
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#eaeaea"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#1c1b1b"
      }
    ],
    "blocks": [
      {
        "type": "category",
        "name": "Category",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo",
            "info": "340 x 80px .jpg recommended"
          }, {
            "type": "url",
            "id": "link",
            "label": "Select Category",
            "default": "/collections"
          }, {
            "type": "text",
            "id": "text",
            "label": "Category Name"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Text",
        "name": "categorys",
        "settings": {},
        "blocks": [
          {
            "type": "category",
            "settings": {}
          }, {
            "type": "category",
            "settings": {}
          }, {
            "type": "category",
            "settings": {}
          }, {
            "type": "category",
            "settings": {}
          }
        ]
      }
    ]
  }
{% endschema %}